<!DOCTYPE html>
<html>
  <head>
    <title>Error | DocumentUp</title>
    <link href='//fonts.googleapis.com/css?family=Josefin+Slab:400,700,400italic,700italic|Source+Code+Pro:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/stylesheets/site.css">
    <% if @env == "production": %>
      <!-- Google Analytics -->
      <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-5201171-14']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      </script>
    <% end %>
  </head>
  <body class="error">
    <div class="header">
      <a href="/"><img src="/images/logo.png" alt="DocumentUp"></a>
    </div>
    <div class="error-message">
      <%- @body %>
    </div>
  </body>
</html>