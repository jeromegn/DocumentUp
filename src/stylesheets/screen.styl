@import "nib";

@import "normalize";

@import "github";
@import "fonts";

html {
  height: 100%;
}

body {
  font: 18px/1.4em "Minion Pro", Times, "Times New Roman", serif;
  font-size-adjust:none;
  font-style:normal;
  font-variant:normal;
  font-weight:normal;
}

h1, h2, h3, h4, header, nav, #loader {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

